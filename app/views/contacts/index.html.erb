<div class="section light-blue" style="min-height: 240px"></div>

<div class="container" style="margin-top: -150px">
  <div class="row">
    <%= render('dashboard/menu') %>
    <div class="col s12 m8 l9">
      <nav style="margin-top: 0.5rem">
        <div class="nav-wrapper">
          <div class="col s12">
            <%= link_to icon('home'), root_path, class: 'breadcrumb' %>
            <%= link_to 'Контакты', contacts_path, class: 'breadcrumb' %>
          </div>
        </div>
      </nav>

      <div class="card-panel">
        <%= link_to icon('plus'), new_contact_path, class: 'btn-floating btn-large waves-effect waves-light right red', style: 'margin-top: -50px' %>
        <% if current_user.contacts.empty? %>
            <p>You haven't contacts yet.</p>
        <% else %>
            <table class="stripped">
              <% current_user.contacts.each do |contact| %>
                  <tr>
                    <td><%= contact.name %></td>
                    <td><%= contact.phone %></td>
                    <td><%= contact.code %></td>
                    <td class="right">
                      <%= link_to icon('pencil'), edit_contact_path(contact), class: 'btn orange'%>
                      <%= link_to icon('trash-o'), contact_path(contact), class: 'btn red', method: :delete %>
                    </td>
                  </tr>
              <% end %>
            </table>
        <% end %>
      </div>
    </div>
  </div>
</div>