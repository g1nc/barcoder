<div class="section light-blue" style="min-height: 240px"></div>

<div class="container">
  <div class="row">
    <div class="col s12 m10 offset-m1 l8 offset-l2">
      <div class="card-panel" style="margin-top: -150px">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

            <div class="row">
            <div class="col s12 m10 offset-m1 input-field">
              <%= f.email_field :email, autofocus: true %>
              <%= f.label :email %>
            </div>
            <div class="col s12 m10 offset-m1 input-field">
              <%= f.password_field :password, autocomplete: "off" %>
              <%= f.label :password %>
            </div>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="row">
              <div class="col s12 m10 offset-m1">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            </div>
          <% end -%>

          <div class="row">
            <div class="col s12 m10 offset-m1">
              <%= button_tag(type: 'submit', class: 'btn orange') do %>
                  <%= icon('sign-in', class: 'left') %> Login
              <% end %>
              <%= render "devise/shared/links" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>