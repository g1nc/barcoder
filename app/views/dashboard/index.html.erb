<div class="section light-blue" style="min-height: 240px"></div>

<div class="container" style="margin-top: -150px">
  <div class="row">
    <%= render('dashboard/menu') %>
    <div class="col s12 m8 l9">
      <nav style="margin-top: 0.5rem">
        <div class="nav-wrapper">
          <div class="col s12">
            <%= link_to icon('home'), root_path, class: 'breadcrumb' %>
          </div>
        </div>
      </nav>
      <div class="card-panel">
        <div class="row" style="margin-bottom: 0">
          <div class="col s12 m6">
            <div class="card-panel green z-depth-0">
              <div class="row" style="margin-bottom: 0">
                <div class="col s4 white-text center"><%= icon('users', class: 'fa-5x') %></div>
                <div class="col s8 white-text">
                  <h5 style="margin: 5px 0">Контактов</h5>
                  <h4 style="margin: 0"><%= current_user.contacts.count %></h4>
                </div>
              </div>
            </div>
          </div>
          <div class="col s12 m6">
            <div class="card-panel deep-orange z-depth-0">
              <div class="row" style="margin-bottom: 0">
                <div class="col s4 white-text center"><%= icon('info', class: 'fa-5x') %></div>
                <div class="col s8 white-text">
                  <h5 style="margin: 5px 0">Уведомлений</h5>
                  <h4 style="margin: 0"><%= current_user.notifications.count %></h4>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>